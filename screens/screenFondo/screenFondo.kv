<ScreenFondo>:
    name: 'ScreenFondo'
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:None
            height:self.minimum_height
            MDIconButton:
                icon:'menu'
                on_release:app.root.ids.nav_drawer.set_state('open')
        ScrollView:
            MDGridLayout:
                row_default_height:10
                adaptive_height:True
                cols:1
                id:layout_fondo
                padding:'15dp'
                spacing:'20dp'
                MDAnchorLayout:
                    anchor_x:'center'
                    anchor_y:'center'
                    size_hint_y:None
                    height:50
                    MDLabel:
                        bold:True
                        halign:'center'
                        text:'Total ahorrado: '+"${:,.2f}".format(root.ahorro)
                        id:ahorrado
                        font_size:sp(20)
                        theme_text_color: "Custom"
                        text_color: "red" if '-' in self.text else 'black'
                        size_hint_y:None
                        adaptive_height: True
                MDRaisedButton:
                    text:'+ Nuevo prestamo'
                    size_hint_x:1
                    on_release:root.nuevo_prestamo()
        
