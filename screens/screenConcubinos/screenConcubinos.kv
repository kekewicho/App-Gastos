<ScreenConcubinos>:
    name: 'ScreenConcubinos'
    ScrollView:
        MDGridLayout:
            row_default_height:10
            adaptive_height:True
            cols:1
            padding:'15dp'
            spacing:'20dp'
            MDBoxLayout:
                size_hint_y:None
                height:'20dp'
                spacing:'10dp'
                MDAnchorLayout:
                    anchor_x:'left'
                    anchor_y:'center'
                    size_hint_x:None
                    MDIconButton:
                        icon:'menu'
                        on_release:app.root.ids.nav_drawer.set_state('open')
                MDLabel:
                    font_style:'H6'
                    halign:'right'
                    valign:'center'
                    text:"Concubino's house"
            MDLabel:
                halign:'center'
                font_style:'Subtitle2'
                text:'La yos le debe al yoryis 500 varo'
                id:balanceConcubino
            MDCard:
                elevation:1
                size_hint_y:None
                height:self.minimum_height
                orientation:'vertical'
                padding:'20dp'
                spacing:'20dp'
                id:gastos_concubinos
                MDBoxLayout:
                    size_hint_y:None
                    height:self.minimum_height
                    MDLabel:
                        text:'Gastos mutuos'
                        font_style:'H6'
                        adaptive_height:True
                    MDIconButton:
                        icon:'plus'
                MDLabel:
                    text:'Aún no hay nada por aquí'
                    halign:'center'
                    font_size:'15sp'
                    adaptive_height:True
                    theme_text_color: "Custom"
                    text_color: '#727372'
            MDCard:
                elevation:1
                size_hint_y:None
                height:self.minimum_height
                orientation:'vertical'
                padding:'20dp'
                spacing:'20dp'
                MDLabel:
                    text:'Lista de despensa'
                    font_style:'H6'
                    adaptive_height:True
                MDLabel:
                    text:'Aún no hay nada por aquí'
                    halign:'center'
                    font_size:'15sp'
                    adaptive_height:True
                    theme_text_color: "Custom"
                    text_color: '#727372'
