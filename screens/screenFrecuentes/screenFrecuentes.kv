<ScreenFrecuentes>:
    name:'ScreenFrecuentes'
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title: "Operaciones frecuentes"
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: app.navigateTo('ScreenConfiguracion')]]
            md_bg_color: "white"
            elevation:0
            specific_text_color: "black"
        MDTabs:
            tab_hint_x:True
            background_color:'#ffffff'
            text_color_normal:(0,0,0,.5)
            text_color_active:(0,0,0,1)
            no_ripple_effect:False
            indicator_color:"#7cd16f"
            on_tab_switch:
                self.indicator_color="#bf1336" if self.get_current_tab().title=="Ingresos" else '#7cd16f'
            Tabs:
                title:'Ingresos'
                MDGridLayout:
                    adaptive_height:True
                    cols:1
                    id:ingresos
            Tabs:
                title:'Egresos'
                MDGridLayout:
                    adaptive_height:True
                    cols:1
                    id:egresos
    MDFloatingActionButton:
        id: addOp
        icon:'plus'
        on_release:app.manager.current="ScreenAddFrecuentes"
        pos_hint:{'end':.95,'y':.05}
